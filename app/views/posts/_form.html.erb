<%= form_for(@post) do |f| %>
  <%= author_id_field(@post) %>
  <label>Post title:</label><br>
  
  <% if @post.author.nil? %>
    <%= f.select :author_id, options_from_collection_from_select(Author.all, :id, :name) %>
    <%# present list of authors when none are present %>
  <% end %>

  <%= f.hidden_field :author_id %>
  <%# allows author_id to make it to the form partial %>

  <%= f.text_field :title %><br>

  <label>Post Description</label><br>
  <%= f.text_area :description %><br>

  <%= f.submit %>
<% end %>
